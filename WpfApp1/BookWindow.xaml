<Window x:Class="WpfApp1.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Книга" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Название книги:"/>
            <TextBox x:Name="TitleTextBox" Margin="5"/>
            <Label Content="Автор:"/>
            <TextBox x:Name="AuthorTextBox" Margin="5"/>
            <Label Content="Год выпуска:"/>
            <TextBox x:Name="YearTextBox" Margin="5"/>
            <Label Content="Жанр:"/>
            <TextBox x:Name="GenreTextBox" Margin="5"/>
            <Label Content="Количество страниц:"/>
            <TextBox x:Name="PageCountTextBox" Margin="5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Сохранить" Click="Save_Click" Margin="5"/>
                <Button Content="Отменить" Click="Cancel_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
